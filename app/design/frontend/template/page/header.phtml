  document.addEventListener("DOMContentLoaded", function() {
    // Select all navigation items with dropdown functionality
    let navItems = document.querySelectorAll(".bidapp-nav-item.drop-down-toggle");
    
    navItems.forEach(function(navItem) {
        // Get the category from the class
        let categoryClass = "";
        if (navItem.classList.contains("men")) {
            categoryClass = "men";
        } else if (navItem.classList.contains("women")) {
            categoryClass = "women";
        } else if (navItem.classList.contains("kids")) {
            categoryClass = "kids";
        } else if (navItem.classList.contains("homeliving")) {
            categoryClass = "homeliving";
        } else if (navItem.classList.contains("beauty")) {
            categoryClass = "beauty";
        }
        
        // Find corresponding dropdown if it exists
        let dropdown = document.querySelector(`.myntra-dropdown.${categoryClass}-dropdown`);
        
        if (dropdown) {
            // Show dropdown on hover
            navItem.addEventListener("mouseenter", function() {
                // Hide all dropdowns first
                document.querySelectorAll(".myntra-dropdown").forEach(d => {
                    d.style.display = "none";
                });
                
                // Show this dropdown
                dropdown.style.display = "grid";
            });
            
            // Set up dropdown hover behavior
            dropdown.addEventListener("mouseenter", function() {
                dropdown.style.display = "grid";
            });
            
            dropdown.addEventListener("mouseleave", function() {
                dropdown.style.display = "none";
            });
        }
    });
    
    // Hide dropdowns when mouse leaves the nav item and isn't over a dropdown
    document.addEventListener("mouseover", function(e) {
        let isOverNavOrDropdown = false;
        
        // Check if hovering over nav item or dropdown
        if (e.target.closest(".bidapp-nav-item") || e.target.closest(".myntra-dropdown")) {
            isOverNavOrDropdown = true;
        }
        
        // If not hovering over either, hide all dropdowns
        if (!isOverNavOrDropdown) {
            document.querySelectorAll(".myntra-dropdown").forEach(dropdown => {
                dropdown.style.display = "none";
            });
        }
    });
});
</script>
